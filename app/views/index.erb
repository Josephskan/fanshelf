<h2>Sign up!</h2>
<form method="post" action="/user/new">
  <div>
    <label>Username:</label>
    <input type="text" name="name" value="<% @user && @user.name %>">
  </div>
  <div>
    <label>Email:</label>
    <input type="text" name="email" value="<% @user && @user.email %>">
  </div>
  <div>
    <label>Password</label>
    <input type="password" name="password" value="<% @user && @user.password %>"> 
  </div>
  <div>
    <label>Confirm password</label>
    <input type="password" name="password_confirmation" value="<% @user && @user.password %>"> 
  </div>
  <div>
    <input type="submit" value="Signup" >
  </div>
</form>


<h2>Login</h2>
<form method="post" action="/user/login">
  <div>
    <label>Username:</label>
    <input type="text" name="name" value="<% @user && @user.name %>">
  </div>
  <div>
    <label>Password</label>
    <input type="password" name="password" value="<% @user && @user.password %>"> 
  </div>
  <div>
    <input type="submit" value="Login" >
  </div>
</form>

